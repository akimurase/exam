
<div>
  <% if user_signed_in?  %>
    <p><%= current_user.email %>がログインしてます</p>
  <% end %>
</div>


  <p><span><%= @comment.user.email %></span>:<%= @comment.text %></p>

  <div>
    <% @replies.each do |reply| %>
      <P><span><%= current_user.email %>:</span><%= reply.text %></p>
    <% end %>
  </div>

  <div>
    <% if user_signed_in? %>
      <%= form_with url:comment_replies_path, method: :post, local: true do |form| %>
        <%= form.text_area :text, placeholder: "" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% end %>
  </div>

<div>
  <%= link_to "戻る", root_path %>
</div>
