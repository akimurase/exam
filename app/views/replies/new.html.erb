<%= render "shared/header" %>

<div class="contents row">
  <div class="container">
    <p><span><%= @comment.user.name %></span>:<%= @comment.text %></p>
    <div>
      <% @replies.each do |reply| %>
        <P><span><%= current_user.name %>:</span><%= reply.text %></p>
      <% end %>
    </div>
    <div>
      <% if user_signed_in? %>
        <%= form_with url:comment_replies_path, method: :post, local: true do |form| %>
          <%= form.text_area :text, placeholder: "" %>
          <%= form.submit "SEND", class:"send" %>
        <% end %>
      <% end %>
    </div>
  <div>
